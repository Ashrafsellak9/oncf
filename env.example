# Configuration de la base de données PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/oncf_ems_db

# Clé secrète pour Flask (à changer en production)
SECRET_KEY=oncf-secret-key-2024-change-this-in-production

# Environnement de développement
FLASK_ENV=development
FLASK_DEBUG=True

# Configuration du serveur
HOST=0.0.0.0
PORT=5000

# Configuration de la base de données
DB_HOST=localhost
DB_PORT=5432
DB_NAME=oncf_ems_db
DB_USER=postgres
DB_PASSWORD=postgres

# Configuration PostGIS
POSTGIS_ENABLED=True
POSTGIS_SRID=3857

# Configuration de l'application
APP_NAME=ONCF GIS
APP_VERSION=1.0.0
APP_DESCRIPTION=Système d'Information Géographique pour l'ONCF

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/oncf_gis.log

# Configuration de sécurité
CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Configuration des emails (optionnel)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuration des notifications
ENABLE_NOTIFICATIONS=True
NOTIFICATION_EMAIL=admin@oncf.ma

# Configuration de la carte
MAP_CENTER_LAT=31.7917
MAP_CENTER_LNG=-7.0926
MAP_DEFAULT_ZOOM=6
MAP_MIN_ZOOM=5
MAP_MAX_ZOOM=18

# Configuration des exports
EXPORT_CSV_ENABLED=True
EXPORT_EXCEL_ENABLED=True
EXPORT_PDF_ENABLED=False

# Configuration du cache
CACHE_ENABLED=True
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Configuration des sessions
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600

# Configuration de l'upload de fichiers
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuration des API externes (optionnel)
WEATHER_API_KEY=your-weather-api-key
TRAFFIC_API_KEY=your-traffic-api-key

# Configuration de monitoring
ENABLE_MONITORING=True
MONITORING_INTERVAL=60  # secondes

# Configuration des sauvegardes
BACKUP_ENABLED=True
BACKUP_INTERVAL=24  # heures
BACKUP_RETENTION=7  # jours 